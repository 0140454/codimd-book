{
  "name": "CodiMD Book mode",
  "version": "0.0.1",
  "description": "Display a sidebar like HackMD book mode",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "include_globs": [
        "*hackmd*?*book*",
        "*codimd*?*book*"
      ],
      "run_at": "document_start",
      "css": [
        "css/book.css"
      ],
      "js": [
        "js/book.js"
      ]
    }
  ],
  "manifest_version": 2
}